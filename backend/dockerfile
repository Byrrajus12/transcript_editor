# Use the prebuilt base image with heavy deps
FROM us-central1-docker.pkg.dev/transcript-tool-472219/whisperx-repo/base:latest

# Set workdir
WORKDIR /app

# Copy only requirements first (for caching when requirements.txt doesnâ€™t change)
COPY requirements.txt .

# Install Python deps (will be fast if unchanged)
RUN pip install --no-cache-dir -r requirements.txt

# Copy the rest of your app code
COPY . .

# Expose port
EXPOSE 8080

# Run FastAPI with uvicorn
CMD ["uvicorn", "main:app", "--host", "0.0.0.0", "--port", "8080"]
